{
  "compilerOptions": {
    "module": "ES2020",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./lib/esm",
    "baseUrl": "./",
    "incremental": true,
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["examples/**", "dist/**", "lib/**"]
}
